{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true, // 정확한 타입 검사 엄격모드
    "outDir": "./dist",
    "esModuleInterop": true, // 라이브러리 esModule 타입을 지정할지
    "experimentalDecorators": true, // 데커레이터 기능을 사용하겠따
    "emitDecoratorMetadata": true, // 데커레이터 사용 메타데이터 생성
  }
}
